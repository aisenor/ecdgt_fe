{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "/about/**",
        "destination": "/index.html"
      },
      {
        "source": "/tour_dates/**",
        "destination": "/index.html"
      },
      {
        "source": "/tour_standings/**",
        "destination": "/index.html"
      },
      {
        "source": "/contact/**",
        "destination": "/index.html"
      }
    ]
  }
}
